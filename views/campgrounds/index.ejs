<% include ../partials/header %>
<div class="container"> 
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to GoCamp!</h1>
            <div class="form-group">
            <label>View our hand-picked campgrounds from all over the world</label><br>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </div>
        </div>
    </header>
</div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
          
    <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>">
                        <div class="caption">
                        <h4><%= campground.name %></h4>
                        </div>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-xs">More Info</a><br><br>    
                    </div>
                </div>
            <% }); %> 
    </div>
<% include ../partials/footer %>